PREFIX cd: <http://www.tei-c.org/ns/1.0/correspDesc#>
PREFIX geo: <http://www.w3.org/2003/01/geo/wgs84_pos#>

SELECT DISTINCT (concat('POLYGON((',str(?longitudeSentFrom),' ',str(?latitudeSentFrom),',',str(?longitudeSentTo),' ',str(?latitudeSentTo),'))') AS ?WKT)
WHERE {
  ?letter cd:sentFrom ?sentFrom ;
		  cd:sentTo ?sentTo .
  ?sentFrom geo:lat ?latitudeSentFrom ;
    		geo:long ?longitudeSentFrom .
  ?sentTo geo:lat ?latitudeSentTo ;
    	  geo:long ?longitudeSentTo .
}